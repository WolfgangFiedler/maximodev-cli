# EditorConfig is awesome: http://EditorConfig.org

# NOTE: .editorconfig can exist in any directory.  So, if you need to provide specifics for your subdirectory
# or sub project, that is different that this file, you can create your own .editorconfig file in that directory.

# top-most EditorConfig file
root = true

# Defaults for all files unless otherwise specified
[*]
indent_style = space
indent_size = 2

# Unix Shell Scripts
[*.sh]
end_of_line = lf
insert_final_newline = true

# Windows bat files
[*.{bat,cmd}]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Js Files
[*.js]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# Java
[*.java]
charset = utf-8
indent_style = space
indent_size = 4

# Property Files
[*.properties]
charset = latin1
indent_style = space
indent_size = 2
trim_trailing_whitespace=true

# Css Files
[*.css]
charset = utf-8
indent_style = space
indent_size = 2

# Xml Files
[*.{xml,msg,dbc,xsd,mxs,xml.in}]
charset = utf-8
indent_style = space
indent_size = 2

# Gradle Files
[*.gradle]
charset = utf-8
indent_style = space
indent_size = 2
